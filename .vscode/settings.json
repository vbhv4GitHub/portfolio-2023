{
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.options": {
    "extensions": [".js", ".jsx", ".md", ".mdx", ".ts", ".tsx"]
  },
  "eslint.validate": ["markdown", "javascript", "javascriptreact", "typescript", "typescriptreact"],
  "conventionalCommits.scopes": ["project", "deps", "seo", "ci/cd"]
}
